# Região AWS (obrigatório)
AWS_REGION=sa-east-1

# Credenciais AWS (OPCIONAL - deixe em branco se usar AWS Toolkit ou AWS CLI)
# Se você está usando AWS Toolkit no VS Code, não precisa preencher estas variáveis
# O boto3 irá usar automaticamente as credenciais do Toolkit
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Profile (OPCIONAL - use se tiver múltiplos perfis configurados)
# AWS_PROFILE=default

# Força o boto3 a carregar configurações do arquivo ~/.aws/config
AWS_SDK_LOAD_CONFIG=1

# Configurações Flask
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
